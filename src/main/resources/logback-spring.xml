<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <!-- Appender for rolling log files -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>data/logs/order-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>data/logs/order-service-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize> <!-- Max size of each log file -->
            <maxHistory>30</maxHistory> <!-- Number of old log files to keep -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the root logger level and appender -->
    <root level="DEBUG">
        <appender-ref ref="ROLLING" />
    </root>
</configuration>
